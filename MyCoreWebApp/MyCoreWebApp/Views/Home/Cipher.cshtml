@model MyCoreWebApp.Models.Calculator
@{
    ViewData["Title"] = "Шифрование Цезаря";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Cipher">
    <p><label>Текст</label></p>
    <p><input type="text" asp-for="value1" /></p>
    <p><label>Ключ</label></p>
    <p><input type="number" asp-for="value2" /></p>
    <p><input type="submit" value="Encode" asp-for="calulate" /></p>
    <p><input type="submit" value="Decode" asp-for="calulate" /></p>
    <p><label>Результат</label></p>
    <p><input type="text" asp-for="@ViewData["result"]" /></p>
</form>